{
  "name": "@weno/bootstrap",
  "version": "0.27.1",
  "description": "Bootstrap with design system from WENO",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css scss/:dist",
    "release:minor": "npm version minor && npm publish",
    "release:patch": "npm version patch && npm publish",
    "prerelease:minor": "npm version preminor --preid=beta && npm publish --tag beta",
    "prerelease:patch": "npm version prepatch --preid=beta && npm publish --tag beta",
    "lint:style": "stylelint \"**/*.scss\""
  },
  "keywords": [
    "design system",
    "scss",
    "css",
    "weno"
  ],
  "files": [
    "dist"
  ],
  "author": "WENO",
  "dependencies": {
    "@weno/icons": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^8.44.0",
    "prettier": "^3.0.0",
    "rollup": "^3.26.2",
    "sass": "^1.63.6"
  }
}
